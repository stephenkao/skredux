extends ../layouts/default
include ../mixins/separators

block header
  .title--page
    .row
      .twelve.columns
        i.icon.icon--bo

mixin post(post)
  article.row.post
    .twelve.columns
      .scroll
        .post__content
          h2.post__title
            | #{post.title}

          div.post__metadata
            span
              | Published #{moment(post.publishedDate).format('DD MMMM YYYY')}

            if post.categories.length
              span
                | - covering topics like
              ul
                each tag, index in post.categories
                  li
                    if index == post.categories.length - 1
                      |##{tag.name}
                    else
                      |##{tag.name},

          if post.image.exists
            .emblem.full-bleed
              img(style="width: 30vw; height: 30vw; border-radius: 50%; background-image: url('#{post._.image.fit(1200,1200)}')").image.image--main

          p
            !{post.content.extended}

