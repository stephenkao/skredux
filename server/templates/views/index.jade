extends ../layouts/default
include ../mixins/separators

mixin trigram(type)
  - var n = 0
  div(class=(type == "yu") ? "trigram active" : "trigram")
    i(class="icon icon--#{type}")
    while n < 3
      if n == 0 || n == 2
        +trigram-line(true)
      else
        +trigram-line
      - n++

mixin trigram-line(yin)
  div(class=yin ? "trigram__line trigram__line--yin" : "trigram__line")

block header
  .title--page
    .row
      .twelve.columns
        i.icon.icon--shou

block content
  .baguajing
    .baguajing__outer
      .baguajing__inner
        +trigram("yu").active
        +trigram("shou")
        +trigram("bo")
        +trigram("gong")
        +trigram("xue")
        +trigram("shou")
        +trigram("bo")
        +trigram("gong")
