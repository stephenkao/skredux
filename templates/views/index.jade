extends ../layouts/default

block map
  .map__content
    each row in data.map
      .map__row
        each room in row
          - var modifier = ''
          - if (!room) modifier += 'room--empty'
          - if (room === 'scythe') modifier += ' room--current'
          .map__room.framed.framed--square(class="#{modifier}")
            if room
              img(src="./assets/svg/#{room}.min.svg", style="width: 100%; height: 100%")
